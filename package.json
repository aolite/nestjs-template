{
  "name": "nestjs-template",
  "version": "0.0.2",
  "description": "NestJS project template with JWT authentication, user management and Cucumber e2e tests",
  "author": "http://rhizomik.net/~roberto/",
  "contributors": [
    "Aitor Corchero"
  ],
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:jest-e2e": "jest --config ./test/jest-e2e.json",
    "test:e2e": "cucumber-js -p default",
    "test:e2e:cov": "nyc --reporter=lcov npm run test:e2e"
  },
  "dependencies": {
    "@nestjs/common": "latest",
    "@nestjs/config": "latest",
    "@nestjs/core": "latest",
    "@nestjs/jwt": "latest",
    "@nestjs/mongoose": "latest",
    "@nestjs/passport": "latest",
    "@nestjs/platform-express": "latest",
    "@nestjs/swagger": "^7.3.0",
    "bcrypt": "latest",
    "class-transformer": "latest",
    "class-validator": "latest",
    "helmet": "latest",
    "mongoose": "latest",
    "passport": "latest",
    "passport-jwt": "latest",
    "passport-local": "latest",
    "reflect-metadata": "latest",
    "rimraf": "latest",
    "rxjs": "latest"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.3.1",
    "@istanbuljs/nyc-config-typescript": "latest",
    "@nestjs/cli": "latest",
    "@nestjs/schematics": "latest",
    "@nestjs/testing": "latest",
    "@types/bcrypt": "latest",
    "@types/express": "latest",
    "@types/express-serve-static-core": "latest",
    "@types/jest": "latest",
    "@types/node": "latest",
    "@types/passport-jwt": "latest",
    "@types/passport-local": "latest",
    "@types/serve-static": "latest",
    "@types/supertest": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "chai": "latest",
    "cucumber-pretty": "latest",
    "cucumber-tsflow": "latest",
    "eslint": "latest",
    "eslint-config-prettier": "latest",
    "eslint-plugin-import": "latest",
    "jest": "latest",
    "mongodb-memory-server": "latest",
    "nyc": "latest",
    "prettier": "latest",
    "source-map-support": "latest",
    "supertest": "latest",
    "ts-jest": "latest",
    "ts-loader": "latest",
    "ts-node": "latest",
    "tsconfig-paths": "latest",
    "typescript": "latest"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
